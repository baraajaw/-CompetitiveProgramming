#include <iostream>
#include <string>
#include <vector>
#include <stdio.h>
#include <cmath>
#include <algorithm>
#include <bitset>
#include <map>
#include <memory.h>
using namespace std;
int main(){
	//freopen ( "in" , "r" , stdin);

	 
   int n , m;

   scanf ("%d%d" , &n , &m);

  printf("%d\n" , min( n + 1 , m + 1));

  for (  int i = 0 , j = m ; i <= n && j >= 0 ; i++ , j--)
            printf ("%d %d\n" , i , j);



	return 0;
	}
