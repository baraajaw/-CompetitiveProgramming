#include <bits/stdc++.h>
using namespace std;
int main() {

    int t, n;
    char s[110];

    scanf("%d", &t);
    while(t--){
        scanf("%s", s);     n = strlen(s);
        if(n > 10)
            printf("%c%d%c\n", s[0], n - 2, s[n - 1]);
        else
            printf("%s\n", s);
    }

    return 0;

}
