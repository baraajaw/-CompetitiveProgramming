#include <iostream>
#include <string>
#include <vector>
#include <stdio.h>
#include <cmath>
#include <algorithm>
#include <bitset>
#include <map>
#include <memory.h>
using namespace std;


int main(){
//freopen ( "in" , "r" , stdin);

long long  a[3];

scanf ("%lld%lld%lld" , &a[0] , &a[1] , &a[2]);

sort ( a , a + 3);

if ( (long long ) 2 * (a[0] + a[1]) > a[2])
 printf("%lld\n", (long long)  (a[0] + a[1] + a[2]) / 3);

else
 printf("%lld\n", (long long )a[0] + a[1] );


  return 0;
    
}
