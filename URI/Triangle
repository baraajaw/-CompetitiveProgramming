#include<iostream>
#include<iomanip>
using namespace std;
int main()
{double a,b,c,x,y;
cin>>a>>b>>c;
if((a+b)>c&&(b+c)>a&&(a+c)>b)
{
 x=a+b+c;
 cout<<fixed<<setprecision(1);
 cout<<"Perimetro = "<<x<<endl;
}
else 
{
 y=(a+b)*c/2;
cout<<fixed<<setprecision(1);
cout<<"Area = "<<y<<endl;
}

  return 0;
}
