#include <iostream>
#include<stack>
#include<queue>
using namespace std;
int main() {
  
  int x , y , w; 
  while ( cin >> x && x != 0)
   {
     queue<int> q1;
for ( int i = 0 ; i < x ; i++)
         q1.push( i + 1);
         cout<<"Discarded cards:";
         if ( q1.size() != 1)
         cout<<" ";
while (q1.size() != 1)
{    
    cout<<q1.front();
    if ( q1.size() > 2 )
      cout<<", ";
      
    q1.pop();
    q1.push(q1.front());
    q1.pop();

  }
  cout<<endl;
  
  cout<<"Remaining card: "<<q1.front()<<endl;
   }
   
  
  
  
  return 0;
}
