#include <bits/stdc++.h>
#define ll long long 
#define f(i, x, n) for(int i = x; i < (int)(n); ++i)
using namespace std;
int n, m, ans = 0, cnt = 0;
int dx[] = {-1, -1, 0, 1, 1, 1, 0, -1};
int dy[] = {0, 1, 1, 1, 0, -1, -1, -1};
vector < string > g;
void dfs(int i, int j){
  g[i][j] = '.';
  f(k, 0, 8){
    int nx = dx[k] + i;
    int ny = dy[k] + j;
    if ( nx < n && ny >= 0 && ny < m && nx >= 0 && g[nx][ny] == '*'){
      cnt++;
      dfs(nx, ny);
    }
  }
} 
int main() {
  while ( scanf("%d%d", &n, &m) && n){
      g.clear();
      g.resize(n);
      f(i, 0, n)
        cin >> g[i];
      f(i, 0, n)
          f(j, 0, m)
            if ( g[i][j] == '*'){
              cnt++;
              dfs(i, j);
              if ( cnt == 1)
                ans++;
              cnt = 0;
            }
      printf("%d\n", ans);
      ans = 0;    
  }
  
  return 0;
}
