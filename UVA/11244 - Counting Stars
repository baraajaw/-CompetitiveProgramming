#include<iostream>
#include<vector>
#include<bitset>
#include<stdio.h>
#include<memory.h>
#include<string>
using namespace std;

vector<string> g;
int dx[] = { -1 ,-1 , 0 ,1 ,1 , 1 , 0 , -1};
int dy[] = { 0 , 1 , 1 , 1 ,0 , -1 ,-1 ,-1};
int n , m ; 

void dfs ( int x , int y)
{
	bool flag = true;
	for ( int i = 0 ; i < 8 ; i++)
	{
		int nx = x + dx[i];
		int ny = y + dy[i];
		if (nx >= 0 && ny >= 0 && nx < n && ny < m && g[nx][ny] == '*') 
		{
			flag = false;
			break;
		}

	}
	if ( flag )
		g[x][y] = '.';
}
int main()
{

	
  while ( scanf ( "%d%d" , &n , &m) && n && m)
  {
    g.clear();
		g.resize(n);
	  for ( int i = 0 ; i < n ; ++i)
			  cin >> g[i];
	  int cnt = 0;
	  for ( int i = 0 ; i < n ; ++i)
	  		 for ( int j = 0 ; j < m ; ++j)  
	  			 if ( g[i][j] == '*')
	  		  {
	  				 dfs( i , j);
	  				 if ( g[i][j] =='.')
	  					 cnt++;
	  		  }
	  cout << cnt << endl;
  }

	return 0;
}
